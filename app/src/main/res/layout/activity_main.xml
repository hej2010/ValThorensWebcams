<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.swecookie.valthorens.MainActivity"
    android:fillViewport="false"
    android:background="@color/colorDarkRed"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:text="@string/main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textColor="@color/colorTextLight"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/txtHelpMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_desc"
            android:textAlignment="center"
            android:textColor="@color/colorTextLight" />

        <View
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="1dp" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/choose_from_map"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:id="@+id/choose_from_map"
            android:onClick="onClick"
            android:contentDescription="@string/main_desc_icon" />

        <View
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="1dp" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/funitel_3_vallees"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:id="@+id/funitel_3_vallees"
            android:onClick="onClick"
            android:contentDescription="@string/main_desc_icon"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="1dp" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/de_la_maison"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:id="@+id/de_la_maison"
            android:onClick="onClick"
            android:contentDescription="@string/main_desc_icon"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="1dp" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/les_2_lacs"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:id="@+id/les_2_lacs"
            android:onClick="onClick"
            android:contentDescription="@string/main_desc_icon"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/funitel_de_thorens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/main_desc_icon"
            android:cropToPadding="false"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/funitel_de_thorens" />

        <View
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/la_tyrolienne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/main_desc_icon"
            android:cropToPadding="false"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/plan_bouchet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/main_desc_icon"
            android:cropToPadding="false"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/livecam_360"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/main_desc_icon"
            android:cropToPadding="false"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/plein_sud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/main_desc_icon"
            android:cropToPadding="false"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnAbout"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text="@string/main_about"
                android:textColor="@color/colorTextLight"
                android:onClick="onAboutClicked"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>